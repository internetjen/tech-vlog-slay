<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p class="postText">Created by {{user.name}} on {{format_date date_created}}</p>

  <div>
    <form class="form new-comment-form" method="POST">
      <div class="form-group">
        <label for="comment-desc">Anything to add? Leave a Comment here! </label>
        <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit Comment</button>
      </div>
    </form>
  </div>


  <!-- Loop over each object in the projects array -->
{{#each comments as |comment| }}
<div class="row mb-4 comment">
  <div class="col-md-5">
    <p class="postText"> {{comment.text}}</p>
    <p class="postText">Created by {{comment.user.name}} on {{format_date comment.date_created}}</p>
  </div>
  <div class="col-md-7">
  </div>
</div>
{{/each}}


</div>

